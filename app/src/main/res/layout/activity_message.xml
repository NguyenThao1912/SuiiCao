<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.monsun.suiicao.views.chatting.message.MessageViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.chatting.message.MessageActivity"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/message_header"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/arrow_left_s_line" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/message_img"
                android:layout_marginTop="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logo_spash_screen"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/message_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="left"
                android:text="ten nguoi "
                android:textColor="@color/black"
                android:paddingTop="8dp"
                android:paddingLeft="25dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_alignParentTop="true"
                android:id="@+id/message_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:padding="3dp"
                android:layout_above="@+id/message_chat_container"
            />
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/message_chat_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="10">
                <EditText
                    android:layout_weight="9"
                    android:id="@+id/message_send"
                    android:text="@={viewModel.Message}"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Type a message..."
                    />

                <ImageView
                    android:id="@+id/message_send_ic_send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:onClick="@{() ->viewModel.OnSendIconCLick()}"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/send_pane"
                    android:layout_toRightOf="@id/message_send"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>