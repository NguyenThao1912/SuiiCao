<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lecture_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="25sp"
                android:hint="thu nghiem"
                android:gravity="center"/>
            <com.skydoves.expandablelayout.ExpandableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_showSpinner="true"
                app:layout_constraintTop_toBottomOf="@+id/lecture_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:expandable_spinner_margin="14dp"
                android:padding="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã Học Phần : "
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/lecture_id"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="tín chỉ"/>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_below="@+id/tv"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tín chỉ : "
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/lecture_credit"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/lecture_id"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="tín chỉ"/>
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiết lý thuyết : "
                        android:layout_below="@+id/tv1"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/lecture_theory"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv2"
                        android:layout_below="@+id/lecture_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="tín chỉ"/>
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiết thực hành : "
                        android:layout_below="@+id/tv2"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/lecture_practical"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv3"
                        android:layout_below="@+id/lecture_theory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="tín chỉ"/>
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiết thực hành : "
                        android:layout_below="@+id/tv3"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/lecture_discuss"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv4"
                        android:layout_below="@+id/lecture_practical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="tín chỉ"/>
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Học Kỳ : "
                        android:layout_below="@+id/tv4"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/lecture_semester"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv5"
                        android:layout_below="@+id/lecture_discuss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="tín chỉ"/>
                </RelativeLayout>

            </com.skydoves.expandablelayout.ExpandableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>