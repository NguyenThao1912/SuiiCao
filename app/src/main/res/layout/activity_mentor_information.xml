<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="data"
            type="com.monsun.suiicao.models.Mentor" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".views.useraccount.Mentorinformation.MentorInformation">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mentor_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cố vấn"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="40dp"
                />

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/mentor_information_img"
            android:src="@drawable/testprofile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/mentor_information"/>

        <TextView
            android:id="@+id/txt_mentor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/mentor_information_img"
            android:layout_marginLeft="10dp"
            android:text="Họ tên"
            android:textStyle="bold"
            android:layout_below="@+id/mentor_information"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_fullname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/mentor_information_img"
            android:layout_marginLeft="10dp"
            android:text="@{data.mentorName}"
            android:layout_below="@+id/txt_mentor_name"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/txt_mentor_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/mentor_information_img"
            android:layout_marginLeft="10dp"
            android:text="Khoa"
            android:textStyle="bold"
            android:layout_below="@+id/mentor_information_fullname"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/mentor_information_major"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/mentor_information_img"
            android:layout_marginLeft="10dp"
            android:text="Khoa công nghệ thông tin"
            android:layout_below="@+id/txt_mentor_major"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/txt_mentor_dateofbirth"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Ngày Sinh"
            android:padding="5dp"
            android:layout_below="@+id/mentor_information_img"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_dateofbirth"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="@{data.dateofbirth}"
            android:padding="5dp"
            android:layout_below="@+id/txt_mentor_dateofbirth"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/txt_mentor_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:padding="5dp"
            android:layout_below="@+id/mentor_information_dateofbirth"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_email"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="@{data.email}"
            android:padding="5dp"
            android:layout_below="@+id/txt_mentor_email"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/txt_mentor_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Số điện thoại"
            android:padding="5dp"
            android:layout_below="@+id/mentor_information_email"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_phone"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="@{data.phone}"
            android:padding="5dp"
            android:layout_below="@+id/txt_mentor_phone"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/txt_mentor_hocham"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Học hàm"
            android:padding="5dp"
            android:layout_below="@+id/mentor_information_phone"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_hocham"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="@{data.hocVi}"
            android:padding="5dp"
            android:layout_below="@+id/txt_mentor_hocham"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/txt_mentor_hocvi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Học Vị"
            android:padding="5dp"
            android:layout_below="@+id/mentor_information_hocham"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_hocvi"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="@{data.hocHam}"
            android:padding="5dp"
            android:layout_below="@+id/txt_mentor_hocvi"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/txt_mentor_teachingtime"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Thâm niên giảng dạy"
            android:padding="5dp"
            android:layout_below="@+id/mentor_information_hocvi"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/mentor_information_teachingtime"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="@{data.teachingtime}"
            android:padding="5dp"
            android:layout_below="@+id/txt_mentor_teachingtime"
            android:layout_marginTop="8dp"
            />
            <TextView
                android:id="@+id/txt_mentor_achievement"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="Thành Tích"
                android:padding="5dp"
                android:layout_below="@+id/mentor_information_teachingtime"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/mentor_information_achievement"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="Nghiên cứu về cách áp dụng AI vào những hoạt động hàng ngày"
                android:padding="5dp"
                android:layout_below="@+id/txt_mentor_achievement"
                android:layout_marginTop="8dp"
                />

    </RelativeLayout>
    </ScrollView>
</layout>